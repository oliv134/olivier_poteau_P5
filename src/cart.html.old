<body>
  <main class="container">
    <div class="card">
      <div class="row">

        <div class="cart col-md-8">
          <div class="title mb-5">
            <div class="row">
              <div class="col">
                <h4><b>Votre Panier</b></h4>
              </div>
            </div>
          </div>

          <table class="table">
            <thead>
              <tr>
                <th scope="col" class="d-none d-lg-inline"></th>
                <th scope="col">Article</th>
                <th scope="col">Prix</th>
                <th scope="col">Quantité</th>
                <th scope="col">Prix Total</th>
                <th scope="col"></th>
              </tr>
            </thead>
            <tbody id="cart__products"></tbody>
          </table>


          <!-- Cart Row Template -->
          <template id="cart__row">
            <tr class="product__row">

              <th class="d-none d-lg-inline">
                <img class="img-fluid product__image" src="https://i.imgur.com/yUJweFV.jpeg" />
              </th>
              <th>
                <div class="row text-muted">Appareil photo</div>
                <div class="row product__name">Name</div>
              </th>
              <th class="col-1 p-0">
                &euro; <span class="product__price"></span>
              </th>
              <th class="col-4 col-lg-3 text-center product__quantity">
                <a href="#" class="minus"><i class="far fa-minus-square"></i></a><input type="test"
                  class="form-control col-sm-2 w-25 d-inline p-0 m-0 text-center" id="quantity" name="quantity"
                  class="quantity" placeholder="1" aria-label="quantity" aria-describedby="basic-addon1" /><a href="#"
                  class="plus"><i class="far fa-plus-square"></i></a>
              </th>
              <th class="col-2">
                &euro; <span class="product__total"></span>
              </th>

              <th class="col-1 trash">
                <i class="fas fa-trash-alt"></i>
              </th>

            </tr>
          </template>
          <!-- Cart Row Template -->

          <div class="back-to-shop">
            <a href="index.html">&leftarrow;</a><span class="text-muted">Retour aux articles</span>
          </div>
        </div>
        <div class="col-md-4 summary">
          <div>
            <h5><b>Résumé de la commande</b></h5>
          </div>
          <hr />
          <div class="row">
            <div class="col" style="padding-left: 0">3 Articles</div>
            <div class="col text-right subtotal__price">&euro; 132.00</div>
          </div>
          <form>
            <p>Frais de Port</p>
            <select>
              <option class="text-muted">
                Livraison Standard - &euro;0.00
              </option>
            </select>
            <p>Code Promo</p>
            <input id="code" placeholder="Entrez votre code" />
          </form>
          <div class="row" style="border-top: 1px solid rgba(0, 0, 0, 0.1); padding: 2vh 0">
            <div class="col">Prix Total</div>
            <div class="col text-right total__price">&euro; 137.00</div>
          </div>
          <button class="btn btn-primary">Commandez</button>
        </div>
      </div>
    </div>
