{
  "env": {
    "browser": true,
    "es6": true,
    "mocha": true
  },
  //"parser": "@babel/eslint-parser",
  "extends": ["standard"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "never"],
    "quotes": ["error", "single"],
    "indent": ["error", 2]
  },
  "ignorePatterns": ["**/vendor/*.js"]
  
}
